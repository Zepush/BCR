<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialog_wrapper"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialog_title_wrapper"
        android:layout_width="match_parent"
        android:paddingRight="4dp"
        android:layout_height="48dp"
        android:background="@drawable/dialog_box_title"
        android:gravity="center" >
        <Button
            android:id="@+id/dialog_setup_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_save" />
        <TextView
            android:id="@+id/dialog_title_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/dialog_setup_btn"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:gravity="center" >
        </TextView>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/dialog_box_body"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent">

                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_fw"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editFW"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_bw"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editBW"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_left"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTL"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_right"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTR"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_pick"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editPU"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_drop"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editDD"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_up"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editGU"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_down"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editGD"/>

                    </TableRow>
                    <TableRow
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="STOP"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/editST"/>

                    </TableRow>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

</LinearLayout>